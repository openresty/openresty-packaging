#!/usr/bin/make -f

DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

export NO_PKG_MANGLE=1
export QA_RPATHS=$[ 0x0002 ]

DESTDIR = $(CURDIR)/debian/tmp

%:
	dh $@ --parallel --with autotools-dev,systemd

override_dh_auto_test:

override_dh_usrlocal:

override_dh_auto_configure:

override_dh_auto_build:
	make -j`nproc` USE_SSL=1 PREFIX=/usr/local/openresty-plus/hiredis OPENSSL_PREFIX=/usr/local/openresty-plus/openssl111 V=1

override_dh_auto_install:
	make install  USE_SSL=1 PREFIX=/usr/local/openresty-plus/hiredis DESTDIR=$(DESTDIR) \
		&& rm -f  $(DESTDIR)/usr/local/openresty-plus/hiredis/lib/*.a \
		&& rm -rf $(DESTDIR)/usr/local/openresty-plus/hiredis/lib/pkgconfig

override_dh_auto_clean:
	dh_clean
	rm -rf $(DESTDIR)

override_dh_shlibdeps:
	LD_LIBRARY_PATH=$(LD_LIBRARY_PATH):/usr/local/openresty-plus/openssl111/lib dh_shlibdeps

override_dh_strip:
	dh_strip --dbg-package=openresty-hiredis-dbgsym
