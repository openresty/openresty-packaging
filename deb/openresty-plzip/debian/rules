#!/usr/bin/make -f

DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

export NO_PKG_MANGLE=1
export QA_RPATHS=$[ 0x0002 ]

DESTDIR = $(CURDIR)/debian/tmp

%:
	dh $@ --parallel --with autotools-dev,systemd

override_dh_auto_test:

override_dh_usrlocal:

override_dh_auto_configure:

override_dh_auto_build:
	mv lzlib-1.11 lzlib \
		&& cd lzlib \
    && ./configure --prefix=/lzlib CXXFLAGS='-Wall -W -O2 -g3' \
    && make -j`nproc` \
    && make install DESTDIR='../' \
    && cd - \
		&& ./configure --prefix=/usr/local/openresty-plzip \
    CXXFLAGS="-Wall -W -O2 -g3 -I./lzlib/include" \
    LDFLAGS="-L./lzlib/lib" \
    && make -j`nproc`

override_dh_auto_install:
	rm -rf $(DESTDIR) \
		&& make install-bin DESTDIR=$(DESTDIR)

override_dh_auto_clean:
	dh_clean
	rm -rf $(DESTDIR)

override_dh_strip:
	dh_strip --dbg-package=openresty-plzip-dbgsym
