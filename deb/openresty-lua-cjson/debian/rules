#!/usr/bin/make -f

DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

export NO_PKG_MANGLE=1
export QA_RPATHS=$[ 0x0002 ]

DESTDIR = $(CURDIR)/debian/tmp

%:
	dh $@ --parallel --with autotools-dev

override_dh_auto_test:

override_dh_usrlocal:

override_dh_auto_configure:

override_dh_auto_build:
	export LUA_INCLUDE_DIR=/usr/local/openresty/luajit/include/luajit-2.1/ \
		&& export LUA_LIBRARY=/usr/local/openresty/luajit/lib/ \
		&& SHELL="bash -x" make VERBOSE=1

override_dh_auto_install:
	install -d $(DESTDIR)/usr/local/openresty/lua-cjson/lib \
		&& install -m 0755 cjson.so $(DESTDIR)/usr/local/openresty/lua-cjson/lib

override_dh_auto_clean:
	dh_clean
	rm -rf $(DESTDIR)

override_dh_strip:
	dh_strip --dbg-package=openresty-lua-cjson-dbgsym
