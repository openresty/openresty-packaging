#!/usr/bin/make -f

DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

export NO_PKG_MANGLE=1
export QA_RPATHS=$[ 0x0002 ]

DESTDIR = $(CURDIR)/debian/tmp
PREFIX = /usr/local/openresty-symgen
PERLCC = /usr/local/openresty-perl/bin/perlcc

%:
	dh $@ --parallel --with autotools-dev

override_dh_auto_test:

override_dh_usrlocal:

override_dh_auto_configure:

override_dh_auto_build:
	sed -i 's/\$$FindBin::Bin/\/usr\/local\/openresty-symgen\/bin/' bin/*.pl

	for f in `find bin -type f -name '*.lua'`; do \
		/opt/openresty-saas/luajit/bin/luajit -bg $$f $${f%.lua}.ljbc; \
		rm $$f; \
	done

	make compile PERLCC=$(PERLCC) -j`nproc`

override_dh_auto_install:
	make install DESTDIR=$(DESTDIR) PREFIX=$(PREFIX)

override_dh_auto_clean:
	dh_clean
	rm -rf $(DESTDIR)

override_dh_strip:
	dh_strip --dbg-package=openresty-symgen-dbgsym
