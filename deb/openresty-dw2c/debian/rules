#!/usr/bin/make -f

DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

export NO_PKG_MANGLE=1
export QA_RPATHS=$[ 0x0002 ]
unexport CFLAGS
unexport CXXFLAGS
unexport LDFLAGS

DESTDIR = $(CURDIR)/debian/tmp
PREFIX = /usr/local/openresty-dw2c
PERLCC = /usr/local/openresty-perl/bin/perlcc
PERL_BIN = /usr/local/openresty-perl/bin

%:
	dh $@ --parallel --with autotools-dev

override_dh_auto_test:

override_dh_usrlocal:

override_dh_auto_configure:

override_dh_auto_build:
	for i in 1 2 3; do \
		PATH=$(PERL_BIN):$$PATH \
		make compile USE_LTO=1 USE_TCM=1 PERLCC=$(PERLCC) -j`nproc` && break; \
	done

override_dh_auto_install:
	make install DESTDIR=$(DESTDIR) PREFIX=$(PREFIX)

override_dh_auto_clean:
	dh_clean
	rm -rf $(DESTDIR)

override_dh_strip:
	dh_strip --dbg-package=openresty-dw2c-dbgsym
