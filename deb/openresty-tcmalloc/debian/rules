#!/usr/bin/make -f

DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

export NO_PKG_MANGLE=1
export QA_RPATHS=$[ 0x0002 ]
export PREFIX=/usr/local/openresty-tcmalloc

DESTDIR = $(CURDIR)/debian/tmp

%:
	dh $@ --parallel --with autotools-dev

override_dh_auto_test:

override_dh_usrlocal:

override_dh_auto_configure:

override_dh_auto_build:
	./configure \
    --prefix=$(PREFIX) \
	--disable-dynamic-sized-delete-support \
	--disable-static \
		&& sed -i 's|^hardcode_libdir_flag_spec=.*|hardcode_libdir_flag_spec=""|g' libtool \
		&& sed -i 's|^runpath_var=LD_RUN_PATH|runpath_var=DIE_RPATH_DIE|g' libtool \
		&& make -j`nproc`

override_dh_auto_install:
	make DESTDIR=$(DESTDIR) install \
		&& find $(DESTDIR) -type f -name "*.la" -exec rm -f {} ';' \
		&& rm -rf $(DESTDIR)$(PREFIX)/share \
		&& rm -f $(DESTDIR)$(PREFIX)/bin/pprof \
		&& rm -f $(DESTDIR)$(PREFIX)/bin/pprof-symbolize

override_dh_strip:
	dh_strip --dbg-package=openresty-tcmalloc-dbgsym
