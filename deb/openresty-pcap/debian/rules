#!/usr/bin/make -f

DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

export NO_PKG_MANGLE=1
export QA_RPATHS=$[ 0x0002 ]

DESTDIR = $(CURDIR)/debian/tmp

%:
	dh $@ --parallel --with autotools-dev,systemd

override_dh_auto_test:

override_dh_usrlocal:

override_dh_auto_configure:

override_dh_auto_build:
	export CFLAGS="-fno-strict-aliasing -g3" \
		&& ./configure --prefix=/usr/local/openresty-pcap --libdir=/usr/local/openresty-pcap/lib \
		&& make -j`nproc`

override_dh_auto_install:
	make DESTDIR=$(DESTDIR) install \
		&& rm -rf $(DESTDIR)/usr/local/openresty-pcap/bin \
		&& rm -rf $(DESTDIR)/usr/local/openresty-pcap/share \
		&& rm -rf $(DESTDIR)/usr/local/openresty-pcap/lib/pkgconfig

override_dh_auto_clean:
	dh_clean
	rm -rf $(DESTDIR)

override_dh_strip:
	dh_strip --dbg-package=openresty-pcap-dbgsym
