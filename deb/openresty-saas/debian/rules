#!/usr/bin/make -f
DPKG_EXPORT_BUILDFLAGS = 1
orprefix = /opt/openresty-saas

include /usr/share/dpkg/default.mk

export NO_PKG_MANGLE=1
export QA_RPATHS=$[ 0x0002 ]
export JOBS=`nproc`

DESTDIR = $(CURDIR)/debian/tmp

%:
	dh $@ --parallel --with autotools-dev,systemd

override_dh_auto_configure:
	./configure \
    --prefix="/opt/openresty-saas" \
    --with-cc='ccache gcc' \
    --with-cc-opt="-DNGX_LUA_ABORT_AT_PANIC -I/usr/local/openresty/zlib/include -I/usr/local/openresty/pcre/include -I/usr/local/openresty/openssl/include -g3" \
    --with-ld-opt="-L/usr/local/openresty/zlib/lib -L/usr/local/openresty/pcre/lib -L/usr/local/openresty/openssl/lib -Wl,-rpath,/usr/local/openresty/zlib/lib:/usr/local/openresty/pcre/lib:/usr/local/openresty/openssl/lib" \
    --with-pcre-jit \
    --with-http_ssl_module \
    --with-http_realip_module \
    --with-stream \
    --with-http_v2_module \
    --with-threads \
    --with-lua_resty_dmi \
    --with-luajit-xcflags="-DLUAJIT_NUMMODE=2 -DLUAJIT_ENABLE_LUA52COMPAT -O2 -g3 -DLUAJIT_ENABLE_GC64" \
    --without-lua_resty_memcached_shdict \
    --without-lua_resty_shdict_simple \
    --without-lua_resty_cookie \
    --without-pgmoon \
    --without-lua_resty_ini \
    --without-lua_resty_balancer \
    --without-lua_resty_utf8_escape \
    --without-lua_resty_charset \
    --without-lua_resty_upstream \
    --without-edge_message_bus \
    --without-edge_routing_platform \
    --without-edge_pki \
    --without-lua_resty_config \
    --without-lua_resty_request_id \
    --without-lua_gd \
    --without-lua_captcha \
    --without-lua_resty_domain_suffix \
    --without-lua_resty_triegen \
    --without-edge_message_bus \
    --without-http_lua_conf \
    --without-http_cache_index \
    --without-http_lua_metrics \
    --without-lmdb \
    --without-tcc \
    -j$(JOBS)

override_dh_usrlocal:

override_dh_auto_install:
	dh_auto_install
	rm -rf $(DESTDIR)/opt/openresty-saas/luajit/share/man
	rm -rf $(DESTDIR)/opt/openresty-saas/luajit/lib/libluajit-5.1.a
	rm -rf $(DESTDIR)/opt/openresty-saas/pod/*
	rm -rf $(DESTDIR)/opt/openresty-saas/resty.index
	rm -rf $(DESTDIR)/opt/openresty-saas/bin/md2pod.pl
	rm -rf $(DESTDIR)/opt/openresty-saas/bin/nginx-xml2pod
	rm -rf $(DESTDIR)/opt/openresty-saas/bin/openresty-plus
	rm -rf $(DESTDIR)/opt/openresty-saas/bin/opm
	for f in `find $(DESTDIR)$(orprefix)/lualib -type f -name '*.lua'`; do \
		LUA_PATH="$(DESTDIR)$(orprefix)/luajit/share/luajit-2.1.0-beta3/?.lua;;" $(DESTDIR)$(orprefix)/luajit/bin/luajit -bg $$f $${f%.lua}.ljbc; \
		rm -f $$f; \
	done

override_dh_strip:
	dh_strip --dbg-package=openresty-saas-dbgsym
