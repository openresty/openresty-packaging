#!/usr/bin/make -f

DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

export NO_PKG_MANGLE=1
export QA_RPATHS=$[ 0x0002 ]

DESTDIR = $(CURDIR)/debian/tmp

%:
	dh $@ --parallel --with autotools-dev

override_dh_auto_test:

override_dh_usrlocal:

override_dh_auto_configure:

override_dh_auto_build:
	rm -rf build \
		&& mkdir build \
		&& cd build \
		&& export CC='ccache gcc -fdiagnostics-color=always' \
		&& cmake -DCMAKE_INSTALL_PREFIX=/usr/local/openresty/ljsb .. \
		&& make VERBOSE=1 -j`nproc`

override_dh_auto_install:
	rm -rf $(DESTDIR) \
		&& cd build \
		&& make install DESTDIR=$(DESTDIR) \
		&& mkdir -p $(DESTDIR)/usr/local/openresty/ljsb/lib64 \
		&& cd $(DESTDIR)/usr/local/openresty/ljsb/lib64 \
		&& ln -sf ../lib/*.so* ./

override_dh_auto_clean:
	dh_clean
	rm -rf $(DESTDIR)

override_dh_strip:
	dh_strip --dbg-package=openresty-ljsb-dbgsym
