#!/usr/bin/make -f

DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

export NO_PKG_MANGLE=1
export QA_RPATHS=$[ 0x0002 ]

DESTDIR = $(CURDIR)/debian/tmp

%:
	dh $@ --parallel --with autotools-dev,systemd

override_dh_auto_test:

override_dh_usrlocal:

override_dh_auto_configure:

override_dh_auto_build:
	PYTHONPATH="/usr/local/openresty-python3/lib/python3.7:/usr/local/openresty-python3/lib/python3.7/site-packages:$(DESTDIR)/usr/local/openresty-python3/lib/python3.7:$(DESTDIR)/usr/local/openresty-python3/lib/python3.7/site-packages" PATH=$(DESTDIR)/usr/local/openresty-python3/bin:/usr/bin:$(PATH) /usr/local/openresty-python3/bin/python3 setup.py build -j`nproc`

override_dh_auto_install:
	PYTHONPATH="/usr/local/openresty-python3/lib/python3.7:/usr/local/openresty-python3/lib/python3.7/site-packages:$(DESTDIR)/usr/local/openresty-python3/lib/python3.7:$(DESTDIR)/usr/local/openresty-python3/lib/python3.7/site-packages" PATH=$(DESTDIR)/usr/local/openresty-python3/bin:/usr/bin:$(PATH) /usr/local/openresty-python3/bin/python3 setup.py install --root $(DESTDIR)
	# Remove egg-info
	rm -rf $(DESTDIR)/usr/local/openresty-python3/lib/python3.7/site-packages/Cython-0.28.5-py3.7.egg-info

override_dh_auto_clean:
	dh_clean
	rm -rf $(DESTDIR)

override_dh_strip:
	dh_strip --dbg-package=openresty-python3-cython-dbgsym
