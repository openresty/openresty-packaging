#!/usr/bin/make -f

DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

export NO_PKG_MANGLE=1
export QA_RPATHS=$[ 0x0002 ]

DESTDIR = $(CURDIR)/debian/tmp

%:
	dh $@ --parallel --with autotools-dev,systemd

override_dh_auto_test:

override_dh_usrlocal:

override_dh_auto_configure:

override_dh_auto_build:
	export CC="ccache gcc -I/usr/local/openresty-pcap/include" \
		&& export CFLAGS="-g3 $(getconf LFS_CFLAGS) -fno-strict-aliasing -DHAVE_GETNAMEINFO -I/usr/local/openresty-pcap/include" \
		&& export LDFLAGS="-L/usr/local/openresty-pcap/lib -Wl,-rpath,/usr/local/openresty-pcap/lib" \
		&& ./configure --with-user=tcpdump --without-smi --prefix=/usr/local/openresty-tcpdump --with-system-libpcap --without-crypto\
		&& make -j`nproc`

override_dh_auto_install:
	rm -rf $(DESTDIR) \
		&& mkdir -p $(DESTDIR)/usr/local/openresty-tcpdump/sbin \
		&& install -m755 tcpdump-plus $(DESTDIR)/usr/local/openresty-tcpdump/sbin

override_dh_auto_clean:
	dh_clean
	rm -rf $(DESTDIR)

override_dh_strip:
	dh_strip --dbg-package=openresty-tcpdump-dbgsym
