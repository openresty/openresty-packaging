#!/usr/bin/make -f

DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

export NO_PKG_MANGLE=1
export QA_RPATHS=$[ 0x0002 ]

DESTDIR = $(CURDIR)/debian/tmp

%:
	dh $@ --parallel --with autotools-dev

override_dh_auto_test:

override_dh_usrlocal:

override_dh_auto_configure:

override_dh_auto_build:
	export CC="ccache gcc -fsanitize=address" \
		&& export CFLAGS="-fPIC -fPIE -O1 -fno-omit-frame-pointer -g" \
		&& export ASAN_OPTIONS=detect_leaks=0 \
		&& ./configure \
  --prefix=/opt/openresty-saas-asan/pcre \
  --libdir=/opt/openresty-saas-asan/pcre/lib \
  --disable-cpp \
  --enable-jit \
  --enable-utf \
  --enable-unicode-properties \
		&& make -j`nproc` V=1 > /dev/stderr

override_dh_auto_install:
	make install DESTDIR=$(DESTDIR) \
		&& rm -rf $(DESTDIR)/opt/openresty-saas-asan/pcre/bin \
		&& rm -rf $(DESTDIR)/opt/openresty-saas-asan/pcre/share \
		&& rm -f  $(DESTDIR)/opt/openresty-saas-asan/pcre/lib/*.la \
		&& rm -f  $(DESTDIR)/opt/openresty-saas-asan/pcre/lib/*pcrecpp* \
		&& rm -f  $(DESTDIR)/opt/openresty-saas-asan/pcre/lib/*pcreposix* \
		&& rm -rf $(DESTDIR)/opt/openresty-saas-asan/pcre/lib/pkgconfig

override_dh_auto_clean:
	dh_clean
	rm -rf $(DESTDIR)

override_dh_strip:
	dh_strip --dbg-package=openresty-saas-pcre-asan-dbgsym
