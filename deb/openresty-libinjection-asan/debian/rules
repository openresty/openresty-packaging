#!/usr/bin/make -f

DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

export NO_PKG_MANGLE=1
export QA_RPATHS=$[ 0x0002 ]

DESTDIR = $(CURDIR)/debian/tmp

%:
	dh $@ --parallel --with autotools-dev

override_dh_auto_test:

override_dh_usrlocal:

override_dh_auto_configure:

override_dh_auto_build:
	export CC='ccache gcc -fsanitize=address -fno-omit-frame-pointer' \
		&& export CXX='ccache g++ -fsanitize=address -fno-omit-frame-pointer' \
		&& make compile

override_dh_auto_install:
	rm -rf $(DESTDIR) \
		&& make install_c DESTDIR=$(DESTDIR) LUA_LIB_DIR=/usr/local/openresty-plus-asan/site/lualib

override_dh_auto_clean:
	dh_clean
	rm -rf $(DESTDIR)

override_dh_strip:
	dh_strip --dbg-package=openresty-libinjection-asan-dbgsym
