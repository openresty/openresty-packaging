#!/usr/bin/make -f

DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

export NO_PKG_MANGLE=1
export QA_RPATHS=$[ 0x0002 ]

DESTDIR = $(CURDIR)/debian/tmp

%:
	dh $@ --parallel --with autotools-dev,systemd

override_dh_auto_test:

override_dh_usrlocal:

override_dh_auto_configure:

override_dh_auto_build:
	CC='ccache gcc -fdiagnostics-color=always' \
CFLAGS='-g3 -O2' \
    ./configure \
    --prefix=/usr/local/openresty-tar \
		&& make -j`nproc`

override_dh_auto_install:
	make install DESTDIR=$(DESTDIR) \
		&& rm -rf $(DESTDIR)/usr/local/openresty-tar/share/man \
		&& rm -rf $(DESTDIR)/usr/local/openresty-tar/share/locale \
		&& rm -rf $(DESTDIR)/usr/local/openresty-tar/share/info \
		&& rm -f $(DESTDIR)/usr/local/openresty-tar/libexec/rmt

override_dh_auto_clean:
	dh_clean
	rm -rf $(DESTDIR)

override_dh_strip:
	dh_strip --dbg-package=openresty-tar-dbgsym
