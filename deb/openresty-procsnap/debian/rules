#!/usr/bin/make -f

DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

export NO_PKG_MANGLE=1
export QA_RPATHS=$[ 0x0002 ]

DESTDIR = $(CURDIR)/debian/tmp

%:
	dh $@ --parallel --with autotools-dev

override_dh_auto_test:

override_dh_usrlocal:

override_dh_auto_configure:

override_dh_auto_build:
	rm -rf build \
		&& CFLAGS=`echo -n "$(CFLAGS) -D_GNU_SOURCE" | sed 's/-Wp,-D_FORTIFY_SOURCE=2//' | sed -e 's/-fstack-protector\S*//g'` \
		&& export CC='ccache gcc -fdiagnostics-color=always' \
		&& make -j`nproc` compel/compel-host-bin \
		&& make -j`nproc` -C procsnap

override_dh_auto_install:
	rm -rf $(DESTDIR) \
		&& install -d $(DESTDIR)/usr/local/openresty-procsnap/bin \
		&& install -c -m 755 procsnap/procsnap $(DESTDIR)/usr/local/openresty-procsnap/bin/procsnap

override_dh_auto_clean:
	dh_clean
	rm -rf $(DESTDIR)

override_dh_strip:
	dh_strip --dbg-package=openresty-procsnap-dbgsym
