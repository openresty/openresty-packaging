#!/usr/bin/make -f

DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

export NO_PKG_MANGLE=1
export QA_RPATHS=$[ 0x0002 ]

DESTDIR = $(CURDIR)/debian/tmp

%:
	dh $@ --parallel --with autotools-dev

override_dh_auto_test:

override_dh_usrlocal:

override_dh_auto_configure:

override_dh_auto_build:
	make -j`nproc` CCDEBUG=-g XCFLAGS='-DLUAJIT_NUMMODE=2 -DLUAJIT_ENABLE_LUA52COMPAT -g -DLUAJIT_ENABLE_GC64'

override_dh_auto_install:
	make install DESTDIR=$(DESTDIR) PREFIX=/usr/local/openresty/luajit-plus \
		&& rm -rf $(DESTDIR)/usr/local/openresty/luajit-plus/share/man \
		&& rm -rf $(DESTDIR)/usr/local/openresty/luajit-plus/lib/libluajit-5.1.a

override_dh_auto_clean:
	dh_clean
	rm -rf $(DESTDIR)

override_dh_strip:
	dh_strip --dbg-package=openresty-luajit-plus-dbgsym
