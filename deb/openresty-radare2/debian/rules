#!/usr/bin/make -f

DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

export NO_PKG_MANGLE=1
export QA_RPATHS=$[ 0x0002 ]

DESTDIR = $(CURDIR)/debian/tmp
PREFIX=/usr/local/openresty-tcmalloc

%:
	dh $@ --parallel --with autotools-dev

override_dh_auto_test:

override_dh_usrlocal:

override_dh_auto_configure:

override_dh_auto_build:
	CC='ccache gcc' \
	LDFLAGS='-Wl,-rpath,/usr/local/openresty-radare2/lib -L/usr/local/openresty-tcmalloc/lib -Wl,-rpath,/usr/local/openresty-tcmalloc/lib,--no-as-needed -ltcmalloc_minimal' \
	CFLAGS='-g -O2' \
	./configure --prefix=/usr/local/openresty-radare2 --with-rpath \
		&& make -j`nproc`

override_dh_auto_install:
	make install DESTDIR=$(DESTDIR) \
		&& rm -f  $(DESTDIR)/usr/local/openresty-radare2/lib/*.a \
		&& rm -rf $(DESTDIR)/usr/local/openresty-radare2/lib/pkgconfig \
		&& rm -rf $(DESTDIR)/usr/local/openresty-radare2/include \
		&& rm -rf $(DESTDIR)/usr/local/openresty-radare2/share/man \
		&& rm -rf $(DESTDIR)/usr/local/openresty-radare2/share/doc \
		&& rm -rf $(DESTDIR)/usr/local/openresty-radare2/share/radare2/*-git/www

override_dh_auto_clean:
	dh_clean
	rm -rf $(DESTDIR)

override_dh_strip:
	dh_strip --dbg-package=openresty-radare2-dbgsym
