#!/usr/bin/make -f

DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

export NO_PKG_MANGLE=1
export QA_RPATHS=$[ 0x0002 ]

SSL_PREFIX = /usr/local/openresty-plus/openssl111
ZLIB_PREFIX = /opt/openresty-saas/zlib
PY_PREFIX = /usr/local/openresty-python3
DESTDIR = $(CURDIR)/debian/tmp

clean:
	dh $@ --parallel --with autotools-dev,systemd

%:
	dh $@ --parallel --with autotools-dev,systemd

override_dh_auto_test:

override_dh_usrlocal:

override_dh_auto_configure:

override_dh_auto_build:
	export PYTHONPATH=; \
	export CC='ccache gcc'; \
	./configure --prefix=$(PY_PREFIX) --enable-shared --enable-ipv6 \
		--without-ensurepip \
		--libdir="$(PY_PREFIX)/lib" \
		--with-openssl=$(SSL_PREFIX) \
		&& make -j`nproc` \
		LDFLAGS="-L$(ZLIB_PREFIX)/lib -L$(SSL_PREFIX)/lib -L$(PY_PREFIX)/lib -Wl,-rpath,$(PY_PREFIX)/lib:$(ZLIB_PREFIX)/lib:$(SSL_PREFIX)/lib" \
		CFLAGS="-g -I$(ZLIB_PREFIX)/include -I$(SSL_PREFIX)/include"

override_dh_auto_install:
	make \
    DESTDIR=$(DESTDIR) \
    INSTALL="install -p" \
    sharedinstall libinstall inclinstall bininstall > /dev/null \
		&& find $(DESTDIR) -type f -print0 | xargs -0 chmod u+w \
		&& rm -rf $(DESTDIR)/usr/local/openresty-python3/share \
		&& ( find $(DESTDIR)/usr/local/openresty-python3/lib -type d -name 'test' -exec rm -rf "{}" \; || exit 0 ) \
		&& ( find $(DESTDIR)/usr/local/openresty-python3/lib -type d -name 'tests' -exec rm -rf "{}" \; || exit 0 )

override_dh_clean:
	dh_clean
	rm -rf $(DESTDIR)

override_dh_strip:
	dh_strip --dbg-package=openresty-python3-dbgsym

override_dh_shlibdeps:
	dh_shlibdeps --dpkg-shlibdeps-params=--ignore-missing-info \
		-l$(shell pwd)/debian/openresty-python3/$(PY_PREFIX)/lib
