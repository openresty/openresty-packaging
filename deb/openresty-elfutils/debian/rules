#!/usr/bin/make -f

DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

export NO_PKG_MANGLE=1
export QA_RPATHS=$[ 0x0002 ]

DESTDIR = $(CURDIR)/debian/tmp

%:
	dh $@ --parallel --with autotools-dev,systemd

override_dh_auto_test:

override_dh_usrlocal:

override_dh_auto_configure:

override_dh_auto_build:
	./configure \
    --prefix=/usr/local/openresty-elfutils \
    LIBS='-Wl,-rpath,/usr/local/openresty-elfutils/lib:/usr/local/openresty-yajl/lib -L/usr/local/openresty-yajl/lib -lyajl' \
    CFLAGS="-I/usr/local/openresty-yajl/include -g3 -O2" \
    --enable-maintainer-mode  \
    --disable-debuginfod      \
    --enable-libdebuginfod=dummy \
		&& sed -i 's#^dso_LDFLAGS = #dso_LDFLAGS = -Wl,-rpath,/usr/local/openresty-elfutils/lib:/usr/local/openresty-yajl/lib #' \
    `find . -name Makefile` \
		&& make -j`nproc` > /dev/null

override_dh_auto_install:
	make install DESTDIR=$(DESTDIR) > /dev/null \
		&& rm -rf $(DESTDIR)/usr/local/openresty-elfutils/share/man
	ln -sf /usr/local/openresty-elfutils/bin/eu-readelf $(DESTDIR)/usr/local/openresty-elfutils/bin/eu-readelf2

override_dh_clean:
	dh_clean
	rm -rf $(DESTDIR)

override_dh_strip:
	dh_strip --dbg-package=openresty-elfutils-dbgsym
