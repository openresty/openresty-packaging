#!/usr/bin/make -f

DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

export NO_PKG_MANGLE=1
export QA_RPATHS=$[ 0x0002 ]

DESTDIR = $(CURDIR)/debian/tmp

%:
	dh $@ --parallel --with autotools-dev,systemd

override_dh_auto_test:

override_dh_usrlocal:

override_dh_auto_configure:

override_dh_auto_build:
	make
	/usr/local/openresty/luajit/bin/luajit -bg lib/resty/jsonb.lua lib/resty/jsonb.ljbc
	rm lib/resty/jsonb.lua

override_dh_auto_install:
	rm -rf $(DESTDIR)
	sed -i 's|lib/resty/\*.lua|lib/resty/\*.ljbc|g' Makefile
	make install DESTDIR=$(DESTDIR) LUA_LIB_DIR=/usr/local/openresty/site/lualib

override_dh_auto_clean:
	dh_clean
	rm -rf $(DESTDIR)

override_dh_strip:
	dh_strip --dbg-package=lua-resty-jsonb-1.17.8.2-dbgsym
