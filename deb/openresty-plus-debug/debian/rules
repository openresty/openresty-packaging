#!/usr/bin/make -f
DPKG_EXPORT_BUILDFLAGS = 1
orprefix = /usr/local/openresty-plus-debug

include /usr/share/dpkg/default.mk

export NO_PKG_MANGLE=1
export QA_RPATHS=$[ 0x0002 ]
export NJBS = `nproc`

DESTDIR = $(CURDIR)/debian/tmp

%:
	dh $@ --parallel --with autotools-dev

override_dh_auto_configure:
	./configure \
	  --prefix="/usr/local/openresty-plus-debug" \
	  --with-debug \
	  --with-cc-opt="-I/usr/local/openresty/zlib/include -I/usr/local/openresty/pcre/include -I/usr/local/openresty-plus-debug/openssl/include -Og -g3" \
	  --with-ld-opt="-L/usr/local/openresty/zlib/lib -L/usr/local/openresty/pcre/lib -L/usr/local/openresty-plus-debug/openssl/lib -Wl,-rpath,/usr/local/openresty/zlib/lib:/usr/local/openresty/pcre/lib:/usr/local/openresty-plus-debug/openssl/lib" \
	  --with-pcre-jit \
	  --without-http_rds_json_module \
	  --without-http_rds_csv_module \
	  --without-lua_rds_parser \
	  --with-stream \
	  --with-stream_ssl_module \
	  --with-stream_ssl_preread_module \
	  --with-http_v2_module \
	  --without-mail_pop3_module \
	  --without-mail_imap_module \
	  --without-mail_smtp_module \
	  --with-http_stub_status_module \
	  --with-http_realip_module \
	  --with-http_addition_module \
	  --with-http_auth_request_module \
	  --with-http_secure_link_module \
	  --with-http_random_index_module \
	  --with-http_gzip_static_module \
	  --with-http_sub_module \
	  --with-http_dav_module \
	  --with-http_flv_module \
	  --with-http_mp4_module \
	  --with-http_gunzip_module \
	  --with-threads \
	  --with-poll_module \
	  --with-luajit-xcflags='-DLUAJIT_NUMMODE=2 -DLUAJIT_ENABLE_LUA52COMPAT -Og -g3 -DLUAJIT_ENABLE_GC64' \
	  --with-dtrace-probes \
	  -j$(NJBS)

override_dh_usrlocal:

override_dh_auto_install:
	dh_auto_install
	rm -rf $(DESTDIR)/usr/local/openresty-plus-debug/luajit/share/man
	rm -rf $(DESTDIR)/usr/local/openresty-plus-debug/luajit/lib/libluajit-5.1.a
	rm -rf $(DESTDIR)/usr/local/openresty-plus-debug/lmdb/bin/mdb_{copy,load,stat,drop}
	rm -rf $(DESTDIR)/usr/local/openresty-plus-debug/lmdb/lib/*.a
	rm -rf $(DESTDIR)/usr/local/openresty-plus-debug/lmdb/include
	rm -rf $(DESTDIR)/usr/local/openresty-plus-debug/lmdb/share
	rm -rf $(DESTDIR)/usr/local/openresty-plus-debug/tcc/share
	mkdir -p $(DESTDIR)/usr/bin
	ln -sf ../local/openresty-plus-debug/nginx/sbin/nginx $(DESTDIR)/usr/bin/openresty-plus-debug
	for f in `find $(DESTDIR)$(orprefix)/lualib -type f -name '*.lua'`; do \
		LUA_PATH="$(DESTDIR)$(orprefix)/luajit/share/luajit-2.1.0-beta3/?.lua;;" $(DESTDIR)$(orprefix)/luajit/bin/luajit -bg $$f $${f%.lua}.ljbc; \
		rm -f $$f; \
	done

override_dh_strip:
	dh_strip --dbg-package=openresty-plus-debug-dbgsym
