#!/usr/bin/make -f

DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

export NO_PKG_MANGLE=1
export QA_RPATHS=$[ 0x0002 ]

DESTDIR = $(CURDIR)/debian/tmp

%:
	dh $@ --parallel --with autotools-dev

override_dh_auto_test:

override_dh_usrlocal:

override_dh_auto_configure:

override_dh_auto_build:
	autoreconf -ivf \
		&& CXXFLAGS="-Wno-error=unsafe-loop-optimizations" \
		./configure --prefix=/usr/local/openresty-plus/libmemcached \
		--with-memcached=false --enable-libmemcachedprotocol \
		--enable-shared --disable-static --disable-docs \
		&& make

override_dh_auto_install:
	make install DESTDIR=$(DESTDIR) \
		&& rm -fr $(DESTDIR)/usr/local/openresty-plus/libmemcached/bin \
		&& rm -fr $(DESTDIR)/usr/local/openresty-plus/libmemcached/share \
		&& rm -rf $(DESTDIR)/usr/local/openresty-plus/libmemcached/lib/*.la \
		&& rm -rf $(DESTDIR)/usr/local/openresty-plus/libmemcached/lib/pkgconfig

override_dh_auto_clean:
	dh_clean
	rm -rf $(DESTDIR)

override_dh_strip:
	dh_strip --dbg-package=openresty-libmemcached-dbgsym
