#!/usr/bin/make -f

DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

export NO_PKG_MANGLE=1
export QA_RPATHS=$[ 0x0002 ]
export JOBS=`nproc`

DESTDIR = $(CURDIR)/debian/tmp
PREFIX = /usr/local/openresty-odb

%:
	dh $@ --parallel --with autotools-dev,systemd

override_dh_auto_test:

override_dh_usrlocal:

override_dh_auto_configure:

override_dh_auto_build:
	make -j$(JOBS) \
		CXX='ccache g++' \
		PCRE=/opt/openresty-saas/pcre \
		libodb-runtime.so

override_dh_auto_install:
	mkdir -p $(DESTDIR)/$(PREFIX)/lib/ \
		&& mkdir -p $(DESTDIR)/$(PREFIX)/include/ \
		&& install -c -m 755 libodb-runtime.so $(DESTDIR)/$(PREFIX)/lib/ \
		&& install -c -m 644 odb-runtime.h $(DESTDIR)/$(PREFIX)/include/ \
		&& install -c -m 644 odb-stat.h $(DESTDIR)/$(PREFIX)/include/

override_dh_auto_clean:
	dh_clean
	rm -rf $(DESTDIR)

override_dh_strip:
	dh_strip --dbg-package=openresty-odb-dbgsym
