#!/usr/bin/make -f

DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

export NO_PKG_MANGLE=1
export QA_RPATHS=$[ 0x0002 ]

DESTDIR = $(CURDIR)/debian/tmp
PREFIX = /usr/local/openresty-iproute2
LIBELF_PREFIX = /usr/local/openresty-elfutils
LIBBPF_PREFIX = /usr/local/openresty-libbpf-net

%:
	dh $@ --parallel --with autotools-dev

override_dh_auto_test:

override_dh_usrlocal:

override_dh_auto_configure:

override_dh_auto_build:
	export PKG_CONFIG_PATH=$(LIBBPF_PREFIX)/lib/pkgconfig:$(LIBELF_PREFIX)/lib/pkgconfig \
		&& LIBBPF_FORCE=on \
		./configure --prefix $(PREFIX) --libbpf_dir=$(LIBBPF_PREFIX)
	echo "" >> config.mk
	echo "LDLIBS += -Wl,-rpath,$(LIBELF_PREFIX)/lib" >> config.mk
	echo "CFLAGS += -g -O2" >> config.mk
	make -j`nproc`

override_dh_auto_install:
	make install DESTDIR=$(DESTDIR) \
		PREFIX=$(PREFIX) \
		SBINDIR=$(PREFIX)/sbin \
		CONFDIR=$(PREFIX)/conf \
		ARPDDIR=$(PREFIX)/arpd \
		HDRDIR=$(PREFIX)/include/iproute2 \
		BASH_COMPDIR=$(PREFIX)/bash_completion.d
	rm -rf '$(DESTDIR)$(PREFIX)/share'

override_dh_strip:
	dh_strip --dbg-package=openresty-iproute2-dbgsym
