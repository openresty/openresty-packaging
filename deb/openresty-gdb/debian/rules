#!/usr/bin/make -f

DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

export NO_PKG_MANGLE=1
export QA_RPATHS=$[ 0x0002 ]

DESTDIR = $(CURDIR)/debian/tmp
ELFUTILS_PREFIX = /usr/local/openresty-elfutils
PY_PREFIX = /usr/local/openresty-python3

%:
	dh $@ --parallel --with autotools-dev,systemd

override_dh_auto_test:

override_dh_usrlocal:

override_dh_auto_configure:

override_dh_auto_build:
	mkdir build
	cd build && \
        ../configure --with-python=$(PY_PREFIX)/bin/python3 \
            CXXFLAGS="-g -O2 -I$(PY_PREFIX)/include -I$(ELFUTILS_PREFIX)/include" \
            CFLAGS="-g -O2 -I$(PY_PREFIX)/include -I$(ELFUTILS_PREFIX)/include" \
            LDFLAGS="-L. -L$(PY_PREFIX)/lib -L$(ELFUTILS_PREFIX)/lib \
                -Wl,-rpath,$(PY_PREFIX)/lib:$(ELFUTILS_PREFIX)/lib" \
            --prefix=/usr/local/openresty-gdb --without-guile \
        && make -j`nproc` > /dev/null

override_dh_auto_install:
	cd build && \
	make install DESTDIR=$(DESTDIR) > /dev/null \
		&& ln -sf /usr/lib/debug $(DESTDIR)//usr/local/openresty-gdb/lib/ \
		&& rm -rf $(DESTDIR)/usr/local/openresty-gdb/include/ \
		&& rm -rf $(DESTDIR)/usr/local/openresty-gdb/lib/*.a \
		&& rm -rf $(DESTDIR)/usr/local/openresty-gdb/lib/*.la \
		&& rm -rf $(DESTDIR)/usr/local/openresty-gdb/share/man/ \
		&& rm -rf $(DESTDIR)/usr/local/openresty-gdb/share/info/

override_dh_strip:
	dh_strip --dbg-package=openresty-gdb-dbgsym
