#!/usr/bin/make -f

DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

export NO_PKG_MANGLE=1
export QA_RPATHS=$[ 0x0002 ]

DESTDIR = $(CURDIR)/debian/tmp

%:
	-dh $@ --parallel --with autotools-dev

override_dh_auto_test:

override_dh_usrlocal:

override_dh_auto_configure:

override_dh_auto_build:
	./configure --prefix=/usr/local/openresty/postgresql \
            --libdir="/usr/local/openresty/postgresql/lib" \
            --with-libraries="/usr/local/openresty-plus/openssl111/lib" \
            --with-libxml \
            --with-blocksize=32 \
            --with-segsize=2 \
            --with-wal-blocksize=64 \
            --with-libxslt \
            --with-openssl \
            --with-ossp-uuid \
            CC='ccache gcc' \
            CFLAGS="-O2 -g3 -I/usr/local/openresty-plus/openssl111/include" \
            LDFLAGS="-L. -Wl,-rpath,/usr/local/openresty/postgresql/lib,-rpath,/usr/local/openresty-plus/openssl111/lib" \
		&& make -j`nproc`

override_dh_auto_install:
	make install DESTDIR=$(DESTDIR) \
		&& make install-world DESTDIR=$(DESTDIR) \
		&& rm -rf $(DESTDIR)//usr/local/openresty/postgresql/share/man \
    $(DESTDIR)//usr/local/openresty/postgresql/share/doc \
		&& rm -f $(DESTDIR)//usr/local/openresty/postgresql/lib/*/*.o \
    $(DESTDIR)//usr/local/openresty/postgresql/lib/st[a-zA-Z0-9]* \
		&& install -d $(DESTDIR)/etc/init.d \
		&& install -d $(DESTDIR)//usr/local/openresty/postgresql/share/systemd \
		&& install -p -m 0755 openresty-postgresql.init $(DESTDIR)/etc/init.d/openresty-postgresql \
		&& install -p -m 0755 openresty-postgresql.service $(DESTDIR)//usr/local/openresty/postgresql/share/systemd/openresty-postgresql.service

override_dh_auto_clean:
	dh_clean
	rm -fr $(DESTDIR)

override_dh_strip:
	dh_strip --dbg-package=openresty-postgresql-dbgsym
