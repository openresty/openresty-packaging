#!/usr/bin/make -f
DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

export NO_PKG_MANGLE=1
export QA_RPATHS=$[ 0x0002 ]
export NJBS = `nproc`

DESTDIR = $(CURDIR)/debian/tmp

%:
	dh $@ --parallel --with autotools-dev

override_dh_auto_configure:
	./configure \
	  --prefix="/usr/lib/openresty-valgrind" \
	  --with-cc-opt="-I/usr/lib/openresty/zlib/include -I/usr/lib/openresty/pcre/include -I/usr/lib/openresty-debug/openssl/include -O0" \
	  --with-ld-opt="-L/usr/lib/openresty/zlib/lib -L/usr/lib/openresty/pcre/lib -L/usr/lib/openresty-debug/openssl/lib -Wl,-rpath,/usr/lib/openresty/zlib/lib:/usr/lib/openresty/pcre/lib:/usr/lib/openresty-debug/openssl/lib" \
	  --conf-path=/etc/openresty-valgrind/nginx.conf \
	  --http-log-path=/var/log/openresty-valgrind/access.log \
	  --error-log-path=/var/log/openresty-valgrind/error.log \
	  --lock-path=/run/lock/openresty-valgrind.lock \
	  --pid-path=/run/openresty-valgrind.pid \
	  --modules-path=/usr/lib/openresty-valgrind/modules \
	  --http-client-body-temp-path=/var/lib/openresty-valgrind/body \
	  --http-fastcgi-temp-path=/var/lib/openresty-valgrind/fastcgi \
	  --http-proxy-temp-path=/var/lib/openresty-valgrind/proxy \
	  --http-scgi-temp-path=/var/lib/openresty-valgrind/scgi \
	  --http-uwsgi-temp-path=/var/lib/openresty-valgrind/uwsgi \
	  --with-debug \
	  --with-pcre-jit \
	  --without-http_rds_json_module \
	  --without-http_rds_csv_module \
	  --without-lua_rds_parser \
	  --with-stream \
	  --with-stream_ssl_module \
	  --with-http_v2_module \
	  --without-mail_pop3_module \
	  --without-mail_imap_module \
	  --without-mail_smtp_module \
	  --with-http_stub_status_module \
	  --with-http_realip_module \
	  --with-http_addition_module \
	  --with-http_auth_request_module \
	  --with-http_secure_link_module \
	  --with-http_random_index_module \
	  --with-http_gzip_static_module \
	  --with-http_sub_module \
	  --with-http_dav_module \
	  --with-http_flv_module \
	  --with-http_mp4_module \
	  --with-http_gunzip_module \
	  --with-threads \
	  --with-file-aio \
	  --with-poll_module \
	  --with-luajit-xcflags='-DLUAJIT_NUMMODE=2 -DLUAJIT_ENABLE_LUA52COMPAT -DLUAJIT_USE_VALGRIND -DLUAJIT_USE_SYSMALLOC -O0' \
	  --with-no-pool-patch \
	  --with-dtrace-probes \
	  -j$(NJBS)

override_dh_usrlocal:

override_dh_auto_install:
	dh_auto_install
	rm -rf $(DESTDIR)/usr/local/openresty-valgrind/luajit/share/man
	rm -rf $(DESTDIR)/usr/local/openresty-valgrind/luajit/lib/libluajit-5.1.a
	mkdir -p $(DESTDIR)/usr/bin
	cd $(DESTDIR)/usr/bin
	ln -sf ../local/openresty-valgrind/nginx/sbin/nginx $(DESTDIR)/usr/bin/openresty-valgrind
	cd $(CURDIR)

override_dh_strip:
	dh_strip --dbg-package=openresty-valgrind-dbgsym
